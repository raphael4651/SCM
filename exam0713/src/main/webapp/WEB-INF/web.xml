	<security-role>
		<description></description>
		<role-name>exam</role-name>
	</security-role>
	
	<security-constraint>
		<display-name>exam Security</display-name>
		<web-resource-collection>
			<web-resource-name>exam0713</web-resource-name>
			<description></description>
			<url-pattern>/security.jsp</url-pattern>
		</web-resource-collection>
		
		<auth-constraint>
			<description>권한 관리자명</description>
			<role-name>exam</role-name>
